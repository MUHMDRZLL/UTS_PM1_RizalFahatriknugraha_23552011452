<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:padding="16dp">
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher" android:layout_gravity="center"/>
    <EditText android:id="@+id/etName" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:hint="Nama Lengkap"/>
    <Button android:id="@+id/btnRegister" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:text="Daftar"/>
</LinearLayout>